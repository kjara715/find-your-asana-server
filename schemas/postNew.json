{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 1
      },
      "caption": {
        "type": "string",
        "minLength": 1,
        "maxLength": 120
      },
      "media": {
        "type": "string",
        "minLength": 1
      },
      
      "pin": {
        "type": "string",
        "minLength": 1
      },

      "pin_id": {
        "type": "integer"
      }
      
    },
    "additionalProperties": false,
    "required": [
      "caption",
      "username",
      "media",
      "pin"
    ]
  }